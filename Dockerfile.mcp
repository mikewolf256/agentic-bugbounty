FROM python:3.11-slim

WORKDIR /app

# Install Docker CLI for running katana/whatweb containers
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates curl wget git unzip \
 && curl -fsSL https://get.docker.com -o get-docker.sh \
 && sh get-docker.sh \
 && rm get-docker.sh \
 && rm -rf /var/lib/apt/lists/*

COPY . /app

RUN unzip tools/nuclei_3.5.1_linux_amd64.zip -d /usr/local/bin \
 && chmod +x /usr/local/bin/nuclei

RUN pip install --no-cache-dir -r requirements.txt

EXPOSE 8000
ENV OUTPUT_DIR="/app/output_zap"
ENV NUCLEI_TEMPLATES_DIR="/app/nuclei-templates"
ENV DOCKER_NETWORK="agentic-bugbounty_lab_network"

CMD ["uvicorn", "mcp_server:app", "--host", "0.0.0.0", "--port", "8000"]
